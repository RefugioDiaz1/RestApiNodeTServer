{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "NodeNext",    
    "module": "NodeNext",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir":"./src",
    "lib": ["ESNext"],
    "sourceMap": true,
    "declaration": true,
    //estos dos para cuando deseamos que ts pueda leer o interpretar los decoradores en mi modelo ej. @
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true

    
  },
   "include": ["src/**/*.ts"],
   "exclude":["src/**/*.test.ts"]
}